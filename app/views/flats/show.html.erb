<div class="container d-flex">
<div class="card">
<div class="card-title">
<%= cl_image_tag @flat.photo.key, height: 300, width: 400, crop: :fill %>
<h1><%= @flat.title %></h1>
<h1><%= @flat.address %></h1>
<h1><%= @flat.price %></h1>
<h1><%= @flat.total_occupancy %></h1>
<h1><%= @flat.room_type %></h1>

<%= simple_form_for [@flat, @booking] do |f| %>
<% if @user.owner == true %>
<%= f.input :status, as: :select, collection: [['Send Request to owner', '0']] %>
<%= f.submit class: "btn btn-primary" %>
<% else %>
<%= f.input :status, as: :radio_buttons, collection: [['Reject', '1'], ['Confrim', '2']] %>
<%= f.submit class: "btn btn-primary" %>
<% end  %>

<% end %>
</div>
</div>
</div>
</div>

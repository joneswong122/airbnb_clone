<div id="bold" class="container">
  <% if @user.owner == false %>
    <div class="card-group">
      <div class="griddy" id= "line">
        <% @flats.each do |list| %>
          <div class="card">
            <%= cl_image_tag list.photo.key, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= list.title %></h5>
              <p class="card-text"><%= list.city %></p>
              <p class="card-text"><%= list.address  %>.</p>
              <p class="card-textp">$<%= list.price %>/ Day</p>
              <p class="card-textt"><%= list.total_occupancy  %>&nbsp;<i class="fa-solid fa-person"></i></p>
            </div>
            <div class="card-footer">
              <%= link_to "View", flat_path(list), class: "card-btn"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
